{
    "Version": "2012-10-17",
    "Statement": [
	      {
	          "Action": [
								"dynamodb:GetItem",
	              "dynamodb:UpdateItem"
	           ],
	          "Effect": "Allow",
	          "Resource": "arn:aws:dynamodb:${var.aws_region}:${var.aws_account_id}:table/<DYNAMODB_TABLE>"
	      },
        {
            "Effect": "Allow",
            "Action": [
                "ses:SendEmail",
                "ses:SendRawEmail"
            ],
            "Resource": "*"
        },
        {
            "Sid": "",
            "Resource": "*",
            "Action": [
                "logs:*"
            ],
            "Effect": "Allow"
        }
    ]
}
